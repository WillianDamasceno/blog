---
import Layout from '../layouts/Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <section class="prose mx-auto px-4 pt-16 pb-4">
    <h1>{frontmatter.title}</h1>
    <span>Written by {frontmatter.author}</span>
    <br />
    <time datetime={frontmatter.pubDate}>
      {new Date(frontmatter.pubDate).toLocaleDateString('pt-BR', {
        day: '2-digit',
        month: '2-digit',
        year: 'numeric',
      })}
    </time>

    <hr />
  </section>

  <main class="prose mx-auto p-4">
    <!-- <img src="https://docs.astro.build/assets/rose.webp" alt="" class="aspect-[1.5] object-cover"> -->

    <slot />
  </main>
</Layout>
