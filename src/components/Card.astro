---
import { getBase } from "../lib/utils";

interface Props {
  title: string;
  link: string;
  icon: string;
}

const { title, link, icon } = Astro.props;
---

<a href={getBase(link)} class="text-2xl flex gap-2 justify-center bg-black/5 hover:bg-black/10 items-center aspect-[2.5] rounded-2xl">
	<svg class="size-16">
	  <use href={icon}></use>
	</svg>

	<span>{title}</span>
</a>
