---
import Layout from '../layouts/Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <section class="container py-16">
    <div class="max-w-3xl mx-auto flex flex-col gap-1">
      <h1 class="text-5xl font-bold">{frontmatter.title}</h1>
      <p class="text-lg">Written by {frontmatter.author}</p>
      <time datetime="frontmatter.pubDate">
        {new Date(frontmatter.pubDate).toLocaleDateString('pt-BR', {
          day: '2-digit',
          month: '2-digit',
          year: 'numeric',
        })}
      </time>
    </div>
  </section>

  <main class="prose mx-auto p-4">
    <img src="https://docs.astro.build/assets/rose.webp" alt="" class="aspect-[1.5] object-cover">

    <slot />
  </main>
</Layout>
